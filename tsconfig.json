{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "#api/*": ["src/api/*"],
      "#lib/*": ["src/lib/*"],
      "#db/*": ["src/db/*"],
      "#config": ["src/config.ts"],
      "#auth": ["src/auth.ts"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
